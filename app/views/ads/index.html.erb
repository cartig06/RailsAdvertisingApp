<br><% if !(notice == nil) %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<h1>Advertisements</h1>

<% if @ads.length == 0 %>
  <h4>Nothing to see here...</h1>
<% else %>
  <hr class="my-4">
  <% @ads.each do |ad| %>
    <div class="jumbotron">
      <h1 class="display-4"><%= ad.company %></h1>
      <p class="lead"><%= ad.name %></p>
      <hr class="my-4">
      <p class="lead">Description:</p>
      <p><%= ad.description %></p>
      <%= link_to 'Delete', ad, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %>
    </div>
  <% end %>
<% end %>
